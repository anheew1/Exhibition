<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textview10"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_transDate"
        android:layout_alignStart="@+id/trans_image"
        android:layout_alignLeft="@+id/trans_image"
        android:layout_marginStart="229dp"
        android:layout_marginLeft="229dp"
        android:layout_marginTop="10dp"
        android:text="Artwork name:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_trans_Id"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_trans_ArtworkName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="237dp"
        android:layout_marginLeft="237dp"
        android:layout_marginTop="10dp"
        android:text="1jiojoi"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/text_trans_ArtworkName"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview10"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="238dp"
        android:layout_marginLeft="238dp"
        android:layout_marginTop="13dp"
        android:text="Artwork"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/trans_image"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/text_transDate"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="232dp"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="5dp"
        android:text="2019:06:16"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/text_trans_peroidialPrice"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_trans_Id"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="232dp"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="1dp"
        android:text="27,900"
        android:textSize="20dp" />


</RelativeLayout>