<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/scorll_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sub_place_image"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/text_sub_place_name"
                android:textSize="30sp"
                android:text = "NAME"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/text_sub_place_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:background="@xml/edittext_box"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:textSize="30sp"
                android:text="Artwork Size (cm)"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_sub_place_ArtworkType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:gravity="center"
                />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>